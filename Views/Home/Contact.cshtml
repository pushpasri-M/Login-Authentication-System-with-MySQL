@{
    ViewBag.Title = "Contact";
}

<html>
<head>
    <title></title>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/paragraph.css" rel="stylesheet" />
    <script src="~/Content/JavaScript1.js"></script>
</head>

<body>
    <div>
        <h3 style="text-align:center; font-size:50px">We're Here to Help!</h3>
        <p style="text-align: center; font-size: 20px ">
            Thank you for visiting FURN. Whether you have a question about our products, delivery, customization, or anything else
            <br />we're ready to answer all your queries.
        </p>
    </div>

    <div class="form-wrapper">
        <form method="POST" id="Form-cs">
            <table>
                <tr><th colspan="2">SHARE DETAILS</th></tr>
                <tr>
                    <td><label for="name">Full Name:</label></td>
                    <td><input type="text" id="name" name="name" required></td>
                </tr>
                <tr>
                    <td><label for="email">Email Address:</label></td>
                    <td><input type="email" id="email" name="email" required></td>
                </tr>
                <tr>
                    <td><label for="message">Message:</label></td>
                    <td><textarea id="message" name="message" rows="5" required></textarea></td>
                </tr>
                <tr>
                    <td colspan="2"><button type="submit" onclick="Alt()">Send Message</button></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>