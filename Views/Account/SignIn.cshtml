
@{
    ViewBag.Title = "SignIn";
}

<head>
    <title>Sign Up</title>
    <link href="~/Content/StyleSheetForm.css" rel="stylesheet" />
    <script src="~/Content/JavaScript1.js"></script>
</head>
<body>
    <div class="login-container">
        <h3 class="text-center mb-4">Sign Up</h3>

        <form method="post" action="~/Account/Collect">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="Username" placeholder="Enter username" required />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Enter email" required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="Password" placeholder="Enter password" required />
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm password" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100" style="background-color:darkseagreen; border:none; margin:20px 2px" onclick="signUpMessage() onsubmit="return validateSignUpForm()"">Sign Up</button>
            </div>
        </form>
    </div>
</body>
</html>

